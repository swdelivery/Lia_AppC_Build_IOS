{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@Constant/*": ["src/Constant/*"],
      "@Navigation/*": ["src/Navigation/*"],
      "@Redux/*": ["src/Redux/*"],
      "@Redux": ["src/Redux"],
      "@Components": ["src/Components"],
      "@Components/*": ["src/Components/*"],
      "@Screens/*": ["src/Screens/*"],
      "@Screens": ["src/Screens"],
      "@typings/*": ["src/typings/*"]
    },
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
